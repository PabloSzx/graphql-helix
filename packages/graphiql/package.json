{
  "name": "@graphql-helix/graphiql",
  "version": "1.1.0",
  "description": "A highly evolved GraphQL HTTP Server ðŸ§¬",
  "repository": "https://github.com/contrawork/graphql-helix.git",
  "license": "MIT",
  "author": "Daniel Rearden <danielrearden@gmail.com>",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./*": {
      "require": "./dist/*.js",
      "import": "./dist/*.mjs"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm prepack",
    "bundle": "pnpm bundle:webpack && pnpm bundle:ts",
    "bundle:ts": "node scripts/build-graphiql.cjs",
    "bundle:webpack": "webpack -c browser/webpack.config.js && cpy browser/css/graphiql.min.css bundle/",
    "lint": "prettier --check .",
    "prepack": "bob-esbuild build",
    "prepublishOnly": "pnpm bundle && bob-esbuild build",
    "postpublish": "gh-release"
  },
  "dependencies": {
    "@graphql-tools/url-loader": "7.0.10",
    "@graphql-tools/utils": "8.1.1",
    "@n1ru4l/graphql-live-query": "0.7.1",
    "copy-to-clipboard": "^3.3.1",
    "graphiql": "^1.4.2",
    "graphql": "15.4.0-experimental-stream-defer.1",
    "graphql-language-service-interface": "^2.8.4",
    "prop-types": "15.7.2",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/react": "17.0.18",
    "@types/react-dom": "17.0.9",
    "bob-esbuild-cli": "^1.0.1",
    "changesets-github-release": "^0.0.3",
    "cpy-cli": "^3.1.1",
    "prettier": "2.3.2",
    "terser-webpack-plugin": "5.1.4",
    "ts-loader": "9.2.5",
    "typescript": "4.3.5",
    "webpack": "5.50.0",
    "webpack-cli": "4.8.0"
  },
  "publishConfig": {
    "directory": "dist"
  }
}
